{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [ "./src/**/*.ts" ],
  "exclude": [ "./dist/**" ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
